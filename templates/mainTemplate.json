{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": ["dev", "prod"],
            "defaultValue": "dev",
            "metadata": {
                "description": "Environment type"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "namingPrefix": "[concat('fioneer-', parameters('environment'))]",
        "vnetName": "[concat(variables('namingPrefix'), '-vnet')]",
        "subnetName": "app-subnet",
        "appServicePlanName": "[concat(variables('namingPrefix'), '-asp')]",
        "appServiceName": "[concat(variables('namingPrefix'), '-app')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[variables('vnetName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24",
                            "delegations": [
                                {
                                    "name": "app-service-delegation",
                                    "properties": {
                                        "serviceName": "Microsoft.Web/serverFarms"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "name": "[variables('appServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[if(equals(parameters('environment'), 'prod'), 'P1v2', 'B1')]",
                "tier": "[if(equals(parameters('environment'), 'prod'), 'PremiumV2', 'Basic')]",
                "size": "[if(equals(parameters('environment'), 'prod'), 'P1v2', 'B1')]",
                "family": "[if(equals(parameters('environment'), 'prod'), 'P', 'B')]",
                "capacity": "[if(equals(parameters('environment'), 'prod'), 1, 0)]"
            },
            "kind": "linux",
            "properties": {
                "perSiteScaling": false,
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "name": "[variables('appServiceName')]",
            "location": "[parameters('location')]",
            "kind": "app,linux",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "DOTNETCORE|5.0",
                    "minTlsVersion": "1.2",
                    "ftpsState": "FtpsOnly",
                    "alwaysOn": "[equals(parameters('environment'), 'prod')]",
                    "vnetRouteAllEnabled": true
                },
                "httpsOnly": true
            },
            "resources": [
                {
                    "type": "virtualNetworkConnections",
                    "apiVersion": "2020-12-01",
                    "name": "vnet-integration",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('appServiceName'))]"
                    ],
                    "properties": {
                        "vnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
                        "isSwift": true
                    }
                }
            ]
        }
    ],
    "outputs": {
        "appServiceName": {
            "type": "string",
            "value": "[variables('appServiceName')]"
        },
        "appServiceUrl": {
            "type": "string",
            "value": "[concat('https://', variables('appServiceName'), '.azurewebsites.net')]"
        },
        "vnetName": {
            "type": "string",
            "value": "[variables('vnetName')]"
        }
    }
}
