{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServicePlanName": {
            "type": "string"
        },
        "appServiceName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "environment": {
            "type": "string",
            "allowedValues": ["dev", "prod"]
        }
    },
    "variables": {
        "appServicePlanSku": {
            "dev": "B1",
            "prod": "P1v2"
        },
        "appServicePlanWorkerSize": {
            "dev": 0,
            "prod": 1
        },
        "isProduction": "[equals(parameters('environment'), 'prod')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "name": "[parameters('appServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[variables('appServicePlanSku')[parameters('environment')]]",
                "tier": "[variables('appServicePlanSku')[parameters('environment')]]",
                "size": "[variables('appServicePlanSku')[parameters('environment')]]",
                "family": "[if(variables('isProduction'), 'P', 'B')]",
                "capacity": "[variables('appServicePlanWorkerSize')[parameters('environment')]]"
            },
            "kind": "linux",
            "properties": {
                "perSiteScaling": false,
                "reserved": true,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "name": "[parameters('appServiceName')]",
            "location": "[parameters('location')]",
            "kind": "app,linux",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "DOTNETCORE|5.0",
                    "minTlsVersion": "1.2",
                    "ftpsState": "FtpsOnly",
                    "alwaysOn": "[variables('isProduction')]",
                    "vnetRouteAllEnabled": true
                },
                "httpsOnly": true
            }
        },
        {
            "type": "Microsoft.Web/sites/virtualNetworkConnections",
            "apiVersion": "2020-12-01",
            "name": "[concat(parameters('appServiceName'), '/', parameters('vnetName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
            ],
            "properties": {
                "vnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
            }
        }
    ]
}
